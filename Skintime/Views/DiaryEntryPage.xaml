<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skintime.Views.DiaryEntryPage">
    
    <ContentPage.Resources>
        <!-- Implicit styles -->
        <Style TargetType="{x:Type Editor}">
            <Setter Property="BackgroundColor"
                    Value="{StaticResource AppBackgroundColor}" />
        </Style>
    </ContentPage.Resources>
    
    <!-- Layout children vertically -->
    <StackLayout Margin="{StaticResource PageMargin}">
        <DatePicker TextColor="Black"
                    x:Name="date"
                    Date="{Binding Date}"
                    PropertyChanged="Date_Changed"
            />
        <TimePicker TextColor="Black"
                    x:Name="time"
                    Time="{Binding Time}"
                    PropertyChanged="Time_Changed"
            />
        
        <Picker Title="Product"
            />

        <StackLayout Orientation="Horizontal">
            <Button x:Name="normal"
                        Text="Normal"
                        BackgroundColor="{Binding nColor}"
                        TextColor="{Binding nText}"
                        Clicked="OnNormalButtonClicked"/>
            <Button x:Name="acne"
                        Text="Acne"
                        BackgroundColor="{Binding aColor}"
                        TextColor="{Binding aText}"
                        Clicked="OnAcneButtonClicked"/>
            <Button x:Name="eczema"
                        Text="Eczema"
                        BackgroundColor="{Binding eColor}"
                        TextColor="{Binding eText}"
                        Clicked="OnEczemaButtonClicked"/>
        </StackLayout>
        
        <Editor Placeholder="Enter your note"
                PlaceholderColor="Gray"
                Text="{Binding Text}"
                TextColor="Black"
                HeightRequest="70" />
        
        <!-- Layout children in two columns -->
        <Grid ColumnDefinitions="*,*">
            <Button Text="Save" 
                    Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1"
                    Text="Delete" 
                    Clicked="OnDeleteButtonClicked"/>
        </Grid>
    </StackLayout>
</ContentPage>