<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skintime.Views.HomePage"
             >
    <!--link href="D:/icons/svg/fi-rr-cream.svg" rel="stylesheet"-->
    
            
    <ContentPage.Content>
        <StackLayout>
            <ImageButton x:Name="HomeSearch"
                    Source="SearchBar"
                    WidthRequest = "370"
                    HeightRequest = "90"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    Clicked="OnSearchClicked" />
            <Button Text ="Click to Add Product"
                Clicked="AddProduct_Clicked"/>
            <Button Text ="Click to see Expiring Product"
                Clicked="Expire_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>